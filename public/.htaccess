RewriteEngine On

ErrorDocument 404 /404.html

RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://bc-stone.ru/$1 [L,R=301]

RewriteCond %{ENV:HTTPS} !on
RewriteRule ^.*$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]


RewriteCond %{QUERY_STRING} ^tel=([0-9]+)$
RewriteRule ^call$ call.php [L]


RewriteCond %{REQUEST_URI} !\.(htm?l|jpe?g|png|gif|svg|woff2|js|css|php|webp|ttf)$
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1.html [L]